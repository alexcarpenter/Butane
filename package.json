{
  "name": "boilerplate",
  "version": "0.1.0",
  "scripts": {
    "start": "gulp",
    "webpack": "export NODE_ENV=dev && webpack --hide-modules",
    "webpack-dev": "export NODE_ENV=dev && webpack --hide-modules --watch",
    "webpack-build": "export NODE_ENV=production && webpack --hide-modules",
    "build": "gulp build && npm run webpack-build",
    "stylelint": "stylelint 'src/stylesheets/**/*.scss'",
    "eslint": "standard --verbose | snazzy",
    "test": "npm run eslint && npm run stylelint",
    "precommit": "npm test"
  },
  "standard": {
    "ignore": [
      "public/*",
      "gulpfile.js",
      "webpack.config.js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.24.0",
    "babel-register": "^6.24.0",
    "browser-sync": "^2.18.8",
    "eslint": "^3.18.0",
    "eslint-config-standard": "^7.1.0",
    "eslint-loader": "^1.7.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^3.1.1",
    "gulp-sass": "^3.1.0",
    "gulp-stylelint": "^3.9.0",
    "gulp-svgstore": "^6.1.0",
    "husky": "^0.13.3",
    "lazysizes": "^3.0.0-rc4",
    "run-sequence": "^1.2.2",
    "sass-mq": "^3.3.2",
    "snazzy": "^6.0.0",
    "stylelint": "^7.9.0",
    "stylelint-scss": "^1.4.3",
    "webpack": "^2.2.0-rc.3",
    "webpack-stream": "^3.2.0"
  }
}
