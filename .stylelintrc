{
  "plugins": [
    "stylelint-scss"
  ],
  "ignoreFiles": [
    "./src/stylesheets/tools/*.scss",
    "./src/stylesheets/settings/*.scss",
     "./src/stylesheets/vendor/*.scss"
  ],
  "rules": {
    "color-hex-case": "lower",
    "color-named": "never",
    "color-no-invalid-hex": true,
    "indentation": 2,
    "max-empty-lines": 4,
    "max-nesting-depth": 2
  }
}
